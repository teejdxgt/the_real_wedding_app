<li>
   <% if user.fbid? %>
	  <%= fb_image_tag user.fbid %>
	<% else %>
      <%= gravatar_for user, :size => 50 %>
  <% end %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
   | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{user.name}" %>
  <% end %>
</li>